---
import astroDark from "/src/assets/astro-icon-dark.png";
import astroLight from "/src/assets/astro-icon-light-gradient.png";
import tailwindIcon from "/src/assets/tailwindcss-icon.svg";
import flyIOIcon from "/src/assets/fly-io.png";
import githubIcon from "/src/assets/github-icon.png";
import linkedInIcon from "/src/assets/LI-icon.png";
import discordIcon from "/src/assets/discord-icon.png";
---
<footer class="w-full py-4 md:py-12">
    <div class="max-w-[1080px] mx-auto px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-10 md:gap-8">
            <div class="flex flex-col items-center md:items-start space-y-4">
                <h3
                    class="text-primary-dark dark:text-primary-light font-mulish font-bold text-xl mb-2"
                >
                    Built With
                </h3>
                <div
                    class="flex flex-col items-center md:items-start space-y-3"
                >
                    <div
                        class="flex items-center md:items-start space-x-2 text-primary-dark dark:text-primary-light font-mulish transition-transform hover:scale-110"
                    >
                        <img
                            src={astroDark.src}
                            class="w-5 h-5 dark:hidden"
                            alt="Astro Icon Dark"
                        />
                        <img
                            src={astroLight.src}
                            class="w-5 h-5 hidden dark:block"
                            alt="Astro Icon Light"
                        />
                        <span class="font-bold"
                            ><a
                                href="https://astro.build/"
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Astro Website">Astro</a
                            ></span
                        >
                    </div>

                    <div
                        class="flex items-center md:items-start space-x-2 text-primary-dark dark:text-primary-light font-mulish transition-transform hover:scale-110"
                    >
                        <img
                            src={tailwindIcon.src}
                            class="w-5 h-5"
                            alt="Tailwind Icon"
                        />
                        <span class="font-bold"
                            ><a
                                href="https://tailwindcss.com/"
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Tailwind Website">Tailwind</a
                            ></span
                        >
                    </div>

                    <div
                        class="flex items-center md:items-start space-x-2 text-primary-dark dark:text-primary-light font-mulish transition-transform hover:scale-110"
                    >
                        <img
                            src={flyIOIcon.src}
                            class="w-5 h-5"
                            alt="Fly.io Icon"
                        />
                        <span class="font-bold"
                            ><a
                                href="https://fly.io/"
                                target="_blank"
                                rel="noopener noreferrer"
                                aria-label="Fly.io Website">Fly.io</a
                            ></span
                        >
                    </div>
                </div>
            </div>

            <div class="flex flex-col items-center md:items-end">
                <h3
                    class="text-primary-dark dark:text-primary-light font-bold text-xl font-mulish mb-4"
                >
                    My Socials
                </h3>
                <div class="flex flex-row space-x-6">
                    <a
                        href="https://github.com/audible-sound"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex flex-col items-center transition-transform hover:scale-110"
                        aria-label="GitHub Profile"
                    >
                        <div
                            class="p-3 rounded-full bg-primary-dark dark:bg-secondary-dark group-hover:shadow-lg transition-all"
                        >
                            <img
                                src={githubIcon.src}
                                alt="GitHub Icon"
                                class="w-6 h-6 object-contain"
                            />
                        </div>
                        <span
                            class="mt-2 text-sm text-primary-dark dark:text-primary-light font-mulish"
                        >
                            GitHub
                        </span>
                    </a>

                    <a
                        href="https://www.linkedin.com/in/audy-wallace-siegle/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex flex-col items-center transition-transform hover:scale-110"
                        aria-label="LinkedIn Profile"
                    >
                        <div
                            class="p-3 rounded-full bg-primary-dark dark:bg-secondary-dark group-hover:shadow-lg transition-all"
                        >
                            <img
                                src={linkedInIcon.src}
                                alt="LinkedIn Icon"
                                class="w-6 h-6 object-contain"
                            />
                        </div>
                        <span
                            class="mt-2 text-sm text-primary-dark dark:text-primary-light font-mulish"
                        >
                            LinkedIn
                        </span>
                    </a>

                    <a
                        href="https://discord.com/users/audyws"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group flex flex-col items-center transition-transform hover:scale-110"
                        aria-label="Discord Profile"
                    >
                        <div
                            class="p-3 rounded-full bg-primary-dark dark:bg-secondary-dark group-hover:shadow-lg transition-all"
                        >
                            <img
                                src={discordIcon.src}
                                alt="Discord Icon"
                                class="w-6 h-6 object-contain"
                            />
                        </div>
                        <span
                            class="mt-2 text-sm text-primary-dark dark:text-primary-light font-mulish"
                        >
                            Discord
                        </span>
                    </a>
                </div>
            </div>
        </div>

        <div
            class="mt-8 pt-6 border-t border-primary-dark/20 dark:border-primary-light/20"
        >
            <p
                class="text-center text-sm text-primary-dark dark:text-primary-light font-mulish"
            >
                Â© <span id="year"></span> Audy Wallace Siegle. All rights reserved.
            </p>
        </div>
    </div>
</footer>

<script>
    const year = document.querySelector("#year") as HTMLSpanElement;
    year.textContent = String(new Date().getFullYear());
</script>
